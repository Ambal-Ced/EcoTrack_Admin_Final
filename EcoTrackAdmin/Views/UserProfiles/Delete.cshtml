@model EcoTrackAdmin.Models.UserProfile

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h3>UserProfile</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h4>User Details</h4>
        </dt>
        <dd class="col-sm-10">
        </dd>

        <dd class = "col-sm-10">
            <h5> Id: 
                @Html.DisplayFor(model => model.ApplicationUser.Id)
            </h5>
        </dd>
        <dd class="col-sm-10">
            <h5> Type: 
                @Html.DisplayFor(model => model.ApplicationUser.Type)
            </h5>
        </dd>
        <dd class="col-sm-10">
            <h5> Email: 
                @Html.DisplayFor(model => model.ApplicationUser.Email)
            </h5>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UniqueUserName" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
